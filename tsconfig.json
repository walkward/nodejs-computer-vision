{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": ".",
    "lib": [
      "es2015.promise",
      "es2017",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
