{
  "name": "nodejs-computer-vision",
  "version": "0.0.1",
  "description": "Node.js bindings to OpenCV 3 for async server-side cv tasks",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/walkward/nodejs-computer-vision.git"
  },
  "engines": {
    "npm": "5.6.0",
    "node": "8.11.1"
  },
  "scripts": {
    "prod": "NODE_ENV=production node dist/index.js",
    "start": "NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "lint": "tslint src/**/*.ts",
    "test": "nyc ava-ts",
    "generate": "plop --plopfile internals/generators/index.js"
  },
  "author": "Walker Ward <walker.ward1@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "ava": "0.25.0",
    "ava-ts": "0.25.2",
    "boom": "7.2.0",
    "dotenv": "6.0.0",
    "fs": "0.0.1-security",
    "hapi": "17.5.4",
    "joi": "13.6.0",
    "nconf": "0.10.0",
    "ts-node": "7.0.0",
    "typescript": "3.0.3",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "@types/boom": "7.2.0",
    "@types/dotenv": "4.0.3",
    "@types/hapi": "17.0.19",
    "@types/joi": "13.4.5",
    "@types/nconf": "0.0.37",
    "@types/node": "10.10.3",
    "nodemon": "1.18.4",
    "nyc": "13.0.1",
    "plop": "2.1.0",
    "tslint": "5.11.0",
    "tslint-consistent-codestyle": "1.13.3",
    "tslint-eslint-rules": "5.4.0"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "sources": [
      "src/**/*.ts",
      "!dist/**/*"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
